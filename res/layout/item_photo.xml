<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/zhuye_item_select"
              android:padding="6dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.lbins.FiveChild.widget.CircleImageView
            android:src="@drawable/head"
            android:layout_width="50dp"
            android:id="@+id/head"
            android:layout_height="50dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/head"
              android:id="@+id/title"
              android:text="周晓"
              android:textSize="16sp"
              android:textColor="@color/orange"
              android:layout_marginLeft="6dp"
              android:layout_marginTop="6dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="快乐汽车  体验馆"
              android:textColor="@color/textColor"
              android:textSize="14sp"
              android:id="@+id/content"
              android:layout_marginLeft="6dp"
              android:layout_toRightOf="@+id/head"
              android:layout_marginTop="6dp"
              android:layout_below="@+id/title"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="2015-01-01 15：00"
              android:textColor="@color/textColortwo"
              android:textSize="13sp"
              android:layout_alignParentRight="true"
              android:layout_marginTop="8dp"
              android:layout_marginRight="6dp"
              android:layout_height="wrap_content"/>
    <com.lbins.FiveChild.widget.PictureGridview
            android:id="@+id/gridview_detail_picture"
            android:layout_below="@+id/content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:horizontalSpacing="4dip"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dip"
            android:padding="4dip"/>
    <TextView android:layout_width="wrap_content"
              android:text="共70张图片"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="3dp"
              android:textColor="@color/textColortwo"
              android:textSize="12sp"
              android:id="@+id/msg"
              android:layout_below="@+id/gridview_detail_picture"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="20个赞"
              android:textSize="12sp"
              android:drawablePadding="8dp"
              android:layout_below="@+id/msg"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="8dp"
              android:drawableLeft="@drawable/zan"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="点此去查看>"
              android:layout_below="@+id/msg"
              android:layout_marginTop="5dp"
              android:layout_marginRight="8dp"
              android:textSize="12sp"
              android:layout_alignParentRight="true"
              android:layout_height="wrap_content"/>
</RelativeLayout>