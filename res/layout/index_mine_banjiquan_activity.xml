<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/top_bg"
                    android:layout_height="@dimen/height_top_bar">
        <TextView android:layout_width="wrap_content"
                  android:text="班级圈一小二班"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:padding="6dp"
                  android:id="@+id/back"
                  android:drawableLeft="@drawable/back_white"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.lbins.FiveChild.widget.ReboundScrollView android:layout_width="match_parent"
                                                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="match_parent"
                            android:background="@drawable/banjiquan_bg"
                            android:padding="8dp"
                            android:id="@+id/relate_one"
                            android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:id="@+id/img_one"
                           android:src="@drawable/banjiquan_one"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="班级相册"
                          android:textColor="@color/textColor"
                          android:textSize="16sp"
                         android:layout_marginLeft="8dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/one_title"
                          android:layout_toRightOf="@+id/img_one"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="2015-01-01"
                          android:textSize="13sp"
                          android:padding="8dp"
                          android:layout_alignParentRight="true"
                          android:textColor="@color/textColortwo"
                          android:id="@+id/one_dateline"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="快乐秋游 汽车体验馆"
                          android:textColor="@color/textColortwo"
                          android:textSize="12sp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginTop="5dp"
                          android:layout_toRightOf="@+id/img_one"
                          android:layout_below="@+id/one_title"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:background="@drawable/banjiquan_bg"
                            android:padding="8dp"
                            android:id="@+id/relate_two"
