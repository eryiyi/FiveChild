                          android:textColor="@color/textColortwo"
                          android:textSize="12sp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginTop="5dp"
                          android:layout_toRightOf="@+id/img_three"
                          android:layout_below="@+id/three_title"
