                          android:textSize="13sp"
                          android:padding="8dp"
                          android:layout_alignParentRight="true"
                          android:textColor="@color/textColortwo"
                          android:id="@+id/four_dateline"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
