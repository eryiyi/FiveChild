<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/bottom_bg"
              android:padding="6dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content"
              >
        <RelativeLayout android:layout_width="0dp"
                        android:id="@+id/relate_one"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/foot_one"
                       android:layout_centerHorizontal="true"
                       android:src="@drawable/bottom_icon_one"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="校区介绍"
                      android:textColor="@color/white"
                      android:layout_marginTop="5dp"
                      android:layout_centerHorizontal="true"
                      android:layout_below="@+id/foot_one"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>


    <RelativeLayout android:layout_width="0dp"
                    android:id="@+id/relate_two"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_two"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/bottom_icon_two"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="直播系统"
                  android:textColor="@color/white"
                  android:layout_marginTop="5dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/foot_two"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="0dp"
                    android:id="@+id/relate_three"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_three"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/bottom_icon_three"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="新闻"
                  android:textColor="@color/white"
                  android:layout_marginTop="5dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/foot_three"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="0dp"
                    android:id="@+id/relate_four"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_four"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/bottom_icon_four"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="展示求知"
                  android:textColor="@color/white"
                  android:layout_marginTop="5dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/foot_four"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="0dp"
                    android:id="@+id/relate_five"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_five"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/bottom_icon_five"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="我"
                  android:textColor="@color/white"
                  android:layout_marginTop="5dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/foot_five"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>