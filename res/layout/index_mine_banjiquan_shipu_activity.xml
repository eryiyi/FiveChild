<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/top_bg"
                    android:layout_height="@dimen/height_top_bar">
        <TextView android:layout_width="wrap_content"
                  android:text="营养食谱"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:padding="6dp"
                 android:id="@+id/back"
                  android:drawableLeft="@drawable/back_white"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="@drawable/back_tel"
                  android:padding="15dp"
                  android:layout_marginTop="1dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="周一"
                  android:textSize="15sp"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="周二"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="周三"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="@color/orange"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="周四"
                  android:textSize="15sp"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="@color/textColor"
                  android:text="周五"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:src="@drawable/huandongtiao"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@drawable/back_tel"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="早餐"
                  android:textSize="16sp"
                  android:id="@+id/shangwu"
                  android:textColor="@color/orange"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/shangwu"
                  android:text="红枣豆浆 鹌鹑蛋"
                  android:layout_marginTop="8dp"
                  android:textColor="@color/textColor"
                  android:id="@+id/text_one"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@drawable/back_tel"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="午餐"
                  android:textSize="16sp"
                  android:id="@+id/xiawu"
                  android:textColor="@color/orange"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/xiawu"
                  android:text="红枣豆浆 鹌鹑蛋"
                  android:layout_marginTop="8dp"
                  android:textColor="@color/textColor"
                  android:id="@+id/text_five"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>